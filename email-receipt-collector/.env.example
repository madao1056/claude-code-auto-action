# Gmail API credentials
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:3000/oauth2callback

# Google Drive folder ID where receipts will be stored
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# Email search parameters
EMAIL_SEARCH_QUERY=subject:(receipt OR invoice OR 領収書 OR 請求書) has:attachment
MAX_RESULTS=50

# Schedule (cron format) - default: every day at 9 AM
CRON_SCHEDULE=0 9 * * *

# Receipt detection keywords
RECEIPT_KEYWORDS=receipt,invoice,bill,payment,total,amount,領収書,請求書,合計,金額

# Supported file types
SUPPORTED_EXTENSIONS=pdf,jpg,jpeg,png,gif,bmp,tiff

# OCR language settings
OCR_LANGUAGES=eng+jpn

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log